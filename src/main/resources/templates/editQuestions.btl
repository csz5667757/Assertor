<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="../../static/css/font.css">
    <link rel="stylesheet" href="../../static/css/xadmin.css">
    <script src="../../static/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="../../static/js/xadmin.js"></script>

    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<form class="layui-form" action="" lay-filter="news">
    <div class="layui-fluid">
        <div class="layui-row">
            <div class="layui-form-item">
                <label class="layui-form-label">一级专项</label>
                <div class="layui-input-inline">
                    <select lay-filter="cgFilter"  lay-verify="required"  lay-search>
                        <%
                        for(eg in egList){
                        %>
                        <option value="${eg.id}" ${question.categoryGroupId}==${eg.id}?"selected">${eg.title}</option>
                        <%
                        }
                        %>
                    </select>
                </div>

                <label class="layui-form-label">二级专项</label>
                <div class="layui-input-inline">
                    <select name="exclusiveId" id="exclusiveId"   lay-verify="required"  lay-filter="eFilter" lay-search>
                        <option value="${question.exclusiveId}">${question.exclusiveTitle}</option>
                    </select>
                </div>

            </div>

            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">题目描述</label>
                <div class="layui-input-block">
                    <textarea name="description" id = "description"  lay-verify="required"  placeholder="请输入题目" class="layui-textarea">${question.description}</textarea>
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">选项A:</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="optionA" value="${question.options[0].optionText}" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">选项B:</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="optionB" value="${question.options[1].optionText}" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">选项C:</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="optionC" value="${question.options[2].optionText}" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">选项D:</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="optionD" value="${question.options[3].optionText}" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">正确答案:</label>
                <div class="layui-input-inline">
                    <select name="correctAnswer" required>
                        <option value="${question.options[0].id}" ${question.options[0].id}==${question.answerId}?"selected">A</option>
                        <option value="${question.options[1].id}" ${question.options[1].id}==${question.answerId}?"selected">B</option>
                        <option value="${question.options[2].id}" ${question.options[2].id}==${question.answerId}?"selected">C</option>
                        <option value="${question.options[3].id}" ${question.options[3].id}==${question.answerId}?"selected">D</option>
                    </select>
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">解析:</label>
                <div class="layui-input-block">
                    <textarea name = "analysisCode" id="demo">${question.analysisCode}</textarea>
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="submit">提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    flag = 0;
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form, layer = layui.layer, laydate = layui.laydate, layedit = layui.layedit;

        var editIndex = layedit.build('demo'); //建立编辑器
        function getExclucsive(data) {
            var params = {
                categoryGroupId: data.value
            }
            var categoryGroupId = data.value;
            //检查项目添加到下拉框中
            $.ajax({
                url: '/sys/questions/getExclusive',
                dataType: 'json',
                data: {"categoryGroupId": categoryGroupId},
                contentType: "application/json",
                type: 'GET',
                success: function (data) {
                    $("#exclusiveId").empty();//清空下拉框的值
                    $.each(data.data, function (index, item) {
                        $('#exclusiveId').append(new Option(item.exclusiveTitle, item.id));// 下拉菜单里添加元素
                        form.render("select");//重新渲染 固定写法
                    });
                }
            });
        };

        form.on('select(cgFilter)', function (data) {
            getExclucsive(data);
        });

        //日期
        laydate.render({
            elem: '#date'
        });
        laydate.render({
            elem: '#date1'
        });

        //自定义验证规则
        form.verify({
            title: function (value) {
                if (value.length < 5) {
                    return '标题至少得5个字符啊';
                }
            }
            , pass: [
                /^[\S]{6,12}$/
                , '密码必须6到12位，且不能出现空格'
            ]
            , content: function (value) {
                layedit.sync(editIndex);
            }
        });

        //监听指定开关
        form.on('switch(switchTest)', function (data) {
            layer.msg('开关checked：' + (this.checked ? 'true' : 'false'), {
                offset: '6px'
            });
            layer.tips('温馨提示：请注意开关状态的文字可以随意定义，而不仅仅是ON|OFF', data.othis)
        });

        // 监听提交
        form.on('submit(submit)', function (data) {
            data.field.analysisCode=layedit.getContent(editIndex);
            data.field.id = ${id};
             //layer.alert(JSON.stringify(data.field), {
             //                 title: '最终的提交信息'
             //             });
            layer.confirm('确定提交?', {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    type: 'POST',
                    url: "/sys/questions/updateQuestions",
                    contentType:"application/json",
                    dataType:"JSON",
                    data: JSON.stringify(data.field),
                    success: function (result) {
                        console.log(result);
                        layer.alert(result.message, {title: '处理结果!'},
                            function(){
                                window.parent.location.reload();
                            });
                    }
                });
                layer.close(index);
            });
            return false;
        });
    });
</script>
</body>
</html>
