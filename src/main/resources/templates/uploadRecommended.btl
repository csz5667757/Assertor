<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="../../static/css/font.css">
    <link rel="stylesheet" href="../../static/css/xadmin.css">
    <script src="../../static/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="../../static/js/xadmin.js"></script>

    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<form class="layui-form">
    <div class="layui-fluid">
        <div class="layui-row">
            <div class="layui-form-item">
                <label class="layui-form-label">套题名称</label>
                <div class="layui-input-inline">
                    <input type="text" lay-verify="required" name="recommend" value="" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">用户喜好类别</label>
                <div class="layui-input-inline">
                    <select name="techCategoryId" id="techCategoryId" lay-verify="required" lay-filter="eFilter" lay-search>
                        <option value="">选择偏好类别</option>
                        <%
                        for(tcg in tcg){
                        %>
                        <option value="${tcg.id}">${tcg.name}</option>
                        <%
                        }
                        %>
                    </select>
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">难度</label>
                <div class="layui-input-inline">
                    <select name="level" lay-verify="required" lay-search>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>

            <div class="layui-form-item  layui-form-text">
                <div class="layui-input-block">
                    <table id="demos" lay-filter="demos"></table>
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" lay-filter="submits">提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/html" id="toolbarDemos" name="toolbarDemos">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm" lay-event="addss">添加题目</button>
    </div>
</script>

<script type="text/html" id="barDemos" name= "barDemos">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<script>
    flag = 0;
    layui.use(['form', 'layedit', 'laydate', 'table'], function () {
        var form = layui.form, layer = layui.layer, laydate = layui.laydate, layedit = layui.layedit;
        var table = layui.table;

        table.render({
            elem: '#demos'
            , toolbar: '#toolbarDemos' //开启头部工具栏，并为其绑定左侧模板
            , url: '/sys/recommended/selectList?recommendedId=${id}' //数据接口
            , request: {
                pageName: 'current',
                limitName: 'size'
            }
            , parseData: function (res) { //res 即为原始返回的数据
                return {
                    "code": res.code, //解析接口状态
                    "msg": res.message, //解析提示文本
                    "count": res.data.total, //解析数据长度
                    "data": res.data.records //解析数据列表
                };
            }
            , page: true //开启分页
            , cols: [[ //表头
                {field: 'description', title: '题目', minWidth: 200, sort: true}
                , {fixed: 'right', width: 178, align: 'center', toolbar: '#barDemos'}
            ]]
        });

        //日期
        laydate.render({
            elem: '#date'
        });
        laydate.render({
            elem: '#date1'
        });

        //自定义验证规则
        form.verify({
            title: function (value) {
                if (value.length < 5) {
                    return '标题至少得5个字符啊';
                }
            }
            , pass: [
                /^[\S]{6,12}$/
                , '密码必须6到12位，且不能出现空格'
            ]
            , content: function (value) {
                layedit.sync(editIndex);
            }
        });

        table.on('toolbar(demos)', function (obj) {
            switch (obj.event) {
                case 'addss':
                    xadmin.open('/sys/recommended/upload?recommendedId=${id}','添加套题题目')
                    break;

                //自定义头工具栏右侧图标 - 提示
                case 'LAYTABLE_TIPS':
                    layer.alert('这是工具栏右侧自定义的一个图标按钮');
                    break;
            }
            ;
        });


        // 监听提交
       form.on('submit(submits)', function (data) {
           // data.field.analysisCode = layedit.getContent(editIndex);
            // layer.alert(JSON.stringify(data.field), {
            //                  title: '最终的提交信息'
            //              });
            //layer.confirm('确定提交?', {icon: 3, title: '提示'}, function (index) {
            //    $.ajax({
              //      type: 'POST',
            //        url: "/sys/questions/uploadQuestions",
            //        contentType: "application/json",
            //        dataType: "JSON",
            //        data: JSON.stringify(data.field),
            //        success: function (result) {
            //            console.log(result);
            //            layer.alert(result.message, {title: '处理结果!'},
            //                function () {
            //                    window.parent.location.reload();
             //               });
             //       }
             //   });
             //   layer.close(index);
            //});
            return false;
        });
    });
</script>
</body>
</html>